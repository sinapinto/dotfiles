! vim: ft=xdefaults cms=!%s
#include "/home/veggie/gruvbox.xresources"
#include "/home/veggie/rofi.xresources"

#if defined (FANTASQUE)
# define BOLD
# define FONT               Fantasque Sans Mono-9
  URxvt*letterSpace:        -2
#elif defined (SOURCE)
# define BOLD
# define FONT               Source Code Pro for Powerline-8
  URxvt*letterSpace:        -2
#elif defined (TERMINESES)
# define FONT               Terminess Powerline-9
  URxvt*letterSpace:        0
#elif defined (ENVY)
# define FONT               envypn-13
  URxvt*lineSpace:          0
#else
# define FONT               Ttyp0-11
  URxvt*lineSpace:          1
#endif

Xft.antialias:              1
Xft.autohint:               0
Xft.dpi:                    96
Xft.hinting:                1
Xft.hintstyle:              hintfull
Xft.lcdfilter:              lcddefault
Xft.rgba:                   rgb

URxvt.perl-ext-common:      url-select,font-size

URxvt.keysym.C-S-Up:        font-size:increase
URxvt.keysym.C-S-Down:      font-size:decrease

URxvt.url-select.launcher:  /home/veggie/bin/launch
URxvt.url-select.underline: true
URxvt.keysym.M-C-u:         perl:url-select:select_next

URxvt*termName:             rxvt-256color
URxvt*geometry:             80x20
URxvt*internalBorder:       0
URxvt*iso14755:             false
URxvt*scrollBar:            false
URxvt*colorUL:              #458588
URxvt*underlineColor:       #458588
URxvt*cursorColor:          #00cc00
URxvt*keysym.C-9:           command:\033]720;12\007
URxvt*keysym.C-0:           command:\033]721;12\007
URxvt*boldFont:             xft:FONT:Bold
URxvt*italicFont:           xft:FONT:Italic
URxvt*boldItalicFont:       xft:FONT:Italic:Bold
#ifdef BOLD
URxvt*font:                 xft:FONT:Bold,xft:Liberation Mono for Powerline:Bold
#else
URxvt*font:                 xft:FONT,xft:Liberation Mono for Powerline
#endif
