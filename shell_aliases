alias webcam='mpv /dev/video0'
alias xd='xrdb -I$HOME -merge $HOME/.Xresources'
alias xm='xrdb -merge'
alias keys='killall xbindkeys && xbindkeys'
alias lab='ssh -X spinto@linux.csc.uvic.ca'
