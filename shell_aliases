# make aliases work through sudo
alias sudo='sudo '

# sane defaults
alias ls='ls -F --color=auto'
alias grep='grep --color=auto'
alias du='du -sh'
alias df='df -h'
alias free='free -m'
alias less='less -R'
alias tree='tree -F -I node_modules'
alias feh='feh -q'
alias which='which -a'
alias ping='ping -c3'
alias youtube-dl='youtube-dl --no-call-home'

# npm
alias ns='npm start'
alias nd='npm run dev'
alias nis='npm install --save'
alias nid='npm install --save-dev'
alias nl='npm run lint'

# make
alias smi='sudo make install'
alias md='make debug'
alias mc='make clean'

# git
alias gs='git status'
alias ga='git add'
alias gc='git commit -m'
alias gb='git branch -va'
alias gco='git checkout'
alias gp='git push'
alias gl='git log --date=relative --format="%C(blue)%h %C(yellow)%>(12)%ad %Cgreen%<(7)%aN%C(auto)%d %Creset%s"'
alias gd='git diff'
alias gr='git remote -v'

# pacman
alias pacq='pacman -Q | grep'
alias pacr='sudo pacman -Rsn'
alias paci='sudo pacman -S'
alias pacs='pacman -Ss'
alias u='sudo pacman -Syu'

# systemd
alias sc='systemctl'
alias scu='systemctl --user'
alias jc='journalctl'
alias lc='loginctl'
alias nc='netctl'

# misc
alias ct='ctags -R .'
alias mp='makepkg -sri'
alias al='${EDITOR:-vim} ~/shell_aliases'
alias n='ncmpcpp 2>/dev/null'
alias webcam='mpv /dev/video0'
alias -g S='| curl -F "sprunge=<-" http://sprunge.us'
alias ll='ls -ahlF'
alias la='ls -FA'
alias a='la'
alias g='ls -FA | grep -i'
alias t='tmux attach || tmux new'
alias v='vim'
alias pwgen='< /dev/urandom tr -dc A-M-a-m-0-9 | head -c10 | tee -a ~/.what | xsel'
