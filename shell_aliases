alias -g RD='*(/om[1])'
alias -g RF='*(.om[1])'
alias -g G='| grep -i'

# utils
alias ls='ls -F --color=auto'
alias la='ls -FA'
alias lf='ls -Ft |head -n6'
alias ll='ls -ahlF'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias g='grep'
alias du='du -sh'
alias df='df -h'
alias p='pwd'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias f='find -iname'

# git
