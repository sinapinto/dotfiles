#!/bin/sh

# random stuff
alias gimp='/usr/bin/gimp & disown'
alias ag='ag --nogroup --color-path "0;35" --color-match "1;31" --nonumbers -U --hidden'
alias irb='irb --simple-prompt'
alias mb='xmodmap -e "pointer = 3 2 1'
alias define='sdcv'
alias flib='find /usr/include -name '
# alias wifi='sudo ip link set wlp8s0 up'
alias smi='sudo make install'
alias x='chmod +x'
alias rand='feh --bg-scale -z ~/pictures/walls'
alias s='sudo'
alias vi='vim'
alias wi='wicd-curses'
alias record='ffmpeg -f x11grab -video_size 1066x550 -i :0.0+240,170 -f alsa -i default -c:v ffvhuff -c:a flac test.mkv'
alias webcam='mpv /dev/video0'
alias xm='xrdb -merge'
alias keys='killall xbindkeys && xbindkeys'
alias al='vim $HOME/shell_aliases'
alias v='vim'
alias m='ncmpcpp'
alias -g S='| curl -F "sprunge=<-" http://sprunge.us'
alias -g G='| grep -i'

# utils
alias ls='ls -F --color=auto'
alias la='ls -FA'
alias ll='ls -ahlF'
alias grep='grep --color=auto'
alias du='du -sh'
alias df='df -h'
alias g='la | grep -i '

# git
alias gs='git status'
alias ga='git add'
alias gc='git commit -m'
alias gb='git branch'
alias gco='git checkout'
alias gp='git push'
alias gl='git log --decorate --name-only'
alias gd='git diff'
alias gdl='git diff HEAD~1 HEAD'
# alias gr='git reset --soft HEAD~1'
alias gr='git remote -v'

# pacman
alias pacq='pacman -Q|grep -i'
alias pacr='sudo pacman -Rssn'
alias paci='sudo pacman -S'
alias pacs='pacman -Ss'
alias u='sudo pacman -Syu'
