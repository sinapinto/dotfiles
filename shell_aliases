# vim: ft=sh

# convenience
alias ns='npm start'
alias smi='sudo make install'
alias md='make debug'
alias mc='make clean'
alias al='${EDITOR:-vim} ~/shell_aliases'
alias fu='${EDITOR:-vim} ~/shell_functions'
alias v='vim'
alias e='emacs -nw'
alias n='ncmpcpp 2>/dev/null'
alias wifi='netctl restart wlp8s0-NETGEAR21'
alias flib='find /usr/include -name'
alias webcam='mpv /dev/video0'
alias define='sdcv'
alias -g S='| curl -F "sprunge=<-" http://sprunge.us'
alias ll='ls -ahlF'
alias la='ls -FA'
alias a='la'
alias c='cd'
alias g='ls -FA | grep -i'
alias t='tmux attach || tmux new'

# sane defaults
alias ls='ls -F --color=auto'
alias grep='grep --color=auto'
alias du='du -sh'
alias df='df -h'
alias less='less -R'
alias tree='tree -F -I node_modules'
alias feh='feh -q'
alias which='which -a'

# git
alias gs='git status'
alias ga='git add'
alias gc='git commit -m'
alias gb='git branch'
alias gco='git checkout'
alias gp='git push'
alias gl='git log --date=relative --format="%C(blue)%h %C(yellow)%>(12)%ad %Cgreen%<(7)%aN%C(auto)%d %Creset%s"'
alias gd='git diff'
alias gdl='git diff HEAD'
alias gr='git remote -v'

# pacman
alias pacq='pacman -Q | grep -i'
alias pacr='sudo pacman -Rsn'
alias paci='sudo pacman -S'
alias pacs='pacman -Ss'
alias u='sudo pacman -Syu'

# systemd
alias sc='systemctl'
alias st='systemctl status'
alias jc='journalctl'
alias nc='netctl'
